{
	"extends": "@tsconfig/node16/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"sourceMap": false,
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"checkJs": false,
		"baseUrl": "./",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"ts-node": {
		"files": false,
		"transpileOnly": true,
		"typeCheck": false
	}
}
